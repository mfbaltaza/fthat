{
  "manifest_version": 3,
  "name": "FThat - Remove bad tabs hygiene",
  "version": "1.1",
  "description": "Auto-closes distractions. Enforces breaks with a challenge.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_start"
    }
  ]
}
